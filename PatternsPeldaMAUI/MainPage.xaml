<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PatternsPeldaMAUI.MainPage">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="A conzolos app MAUI-s megfelelője"
               FontSize="18" />
        <Label Text="Nyelv"
               FontSize="14" />
        <Label Text="{Binding Language}"
               FontSize="16" />
        <Button Text="Nyelvváltás"
                Command="{Binding ToggleCommand}" />
        <Button Text="Refresh async"
                Command="{Binding RefreshCommand}" />
        <Label Text="Output:"
               FontSize="14" />
        <Label Text="{Binding Output}"
               FontSize="16" />
    </VerticalStackLayout>

</ContentPage>